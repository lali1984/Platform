# Build stage
FROM node:20-alpine AS builder

# Install pnpm
RUN npm install -g pnpm@8.15.0

WORKDIR /app

# Copy workspace files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy frontend and contracts
COPY 01_frontend/ ./01_frontend/
COPY contracts/ ./contracts/

# Install dependencies
RUN pnpm install --frozen-lockfile --prod=false

# Build contracts
WORKDIR /app/contracts
RUN pnpm run build

# Build frontend
WORKDIR /app/01_frontend
RUN pnpm run build

# Production stage
FROM nginx:alpine AS production

# Install curl for health checks
RUN apk add --no-cache curl

# Copy built assets
COPY --from=builder /app/01_frontend/dist /usr/share/nginx/html

# Copy nginx configuration
COPY 01_frontend/nginx.conf /etc/nginx/conf.d/default.conf

# Copy health check
COPY 01_frontend/healthcheck.cjs /healthcheck.js

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /usr/share/nginx/html && \
    chmod -R 755 /usr/share/nginx/html

USER nodejs

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node /healthcheck.js || exit 1

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]