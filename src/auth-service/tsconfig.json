{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
   
    "baseUrl": ".",
    "paths": {
      "@platform/shared/*": ["../../shared/*/src"],
      "@platform/events": ["../../shared/events/src/index"],
      "@platform/shared-events": ["../../shared/events/src"]
    
  }
  },
   "include": ["src/**/*", "shared-stub.ts"], 
  "exclude": ["node_modules", "dist"]
}
