{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
   
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@platform/kafka": ["../shared/kafka/dist"],
      "@platform/events": ["../shared/events/dist"],
      "@platform/kafka/*": ["../shared/kafka/dist/*"],
      "@platform/events/*": ["../shared/events/dist/*"]
    }
  },
  "include": ["src/**/*", "shared-stub.ts", "../../../shared/kafka", "../../../shared/events"], 
  "exclude": ["node_modules", "dist"]
}