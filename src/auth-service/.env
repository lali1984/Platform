# src/auth-service/.env
NODE_ENV=development
PORT=3000

# Database
DB_HOST=postgres-auth
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=secret
DB_NAME=auth_db

# Redis
REDIS_URL=redis://redis:6379

# JWT - ОБЯЗАТЕЛЬНО заменить в production!
JWT_ACCESS_SECRET=your-super-secure-access-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-minimum-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# App
APP_URL=http://localhost:3001