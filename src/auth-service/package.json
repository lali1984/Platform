{
  "name": "auth-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "health": "node -e \"const http = require('http'); http.get('http://localhost:3001/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1); }).on('error', () => process.exit(1));\"",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t auth-service .",
    "test": "jest --coverage",
    "test:unit": "jest src/tests/unit --coverage",
    "test:integration": "jest src/tests/integration --coverage",
    "test:e2e": "jest src/tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "test:all": "npm run test:setup && npm run test && npm run test:teardown",
    "test:ci": "npm run test:setup && npm run test -- --ci --maxWorkers=2 && npm run test:teardown",
    "docker:run": "docker run -p 3001:3000 auth-service",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.2.5",
    "@platform/events": "file:../../../shared/events",
    "@platform/kafka": "file:../../../shared/kafka",
    "@types/jsonwebtoken": "^9.0.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "otplib": "^12.0.1",
    "pg": "^8.17.1",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.28",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.29",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/redis": "^4.0.10",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "description": "",
  "keywords": [],
