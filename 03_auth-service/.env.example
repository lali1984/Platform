# ============================================
# Auth Service Environment Configuration
# ============================================

# Application
# ============
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database (PostgreSQL)
# =====================
DATABASE_URL=postgresql://postgres:password@localhost:5432/auth_db
DATABASE_SSL=false
DATABASE_LOGGING=false
DATABASE_SYNCHRONIZE=false

# JWT Configuration
# =================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=auth-service

# Two-Factor Authentication (2FA)
# ===============================
TWO_FACTOR_APP_NAME="Platform Ecosystem"
TWO_FACTOR_ISSUER="Auth Service"
TWO_FACTOR_DIGITS=6
TWO_FACTOR_PERIOD=30
TWO_FACTOR_ALGORITHM=SHA1

# Kafka Configuration
# ===================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=auth-service
KAFKA_GROUP_ID=auth-service-group
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# Security
# ========
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email (for password reset)
# ==========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@platform-ecosystem.com

# Redis (for session storage - optional)
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
# ==========
PROMETHEUS_METRICS_PORT=9091
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
# =============
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

