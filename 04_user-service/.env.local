# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=user-service
KAFKA_CONSUMER_GROUP_ID=user-service-group
KAFKA_CONSUMER_SESSION_TIMEOUT=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL=3000
KAFKA_CONSUMER_ALLOW_AUTO_TOPIC_CREATION=true
KAFKA_CONSUMER_MAX_BYTES_PER_PARTITION=1048576
KAFKA_CONSUMER_RETRY_INITIAL_TIME=100
KAFKA_CONSUMER_RETRY_COUNT=8

# Database Configuration
DATABASE_HOST=postgres-user
DATABASE_PORT=5432
DATABASE_USERNAME=admin
DATABASE_PASSWORD=secret
DATABASE_NAME=user_db
DATABASE_LOGGING=false
DATABASE_POOL_SIZE=10

# Application
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000
RUN_MIGRATIONS=false
