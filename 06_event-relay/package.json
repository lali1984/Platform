{
  "name": "event-relay",
  "version": "1.0.0",
  "description": "Event relay service for reading from outbox tables and publishing to Kafka",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --fix",
    "test": "jest --coverage",
    "docker:build": "docker build -t event-relay .",
    "docker:run": "docker run -p 3006:3006 event-relay"
  },
  "dependencies": {
    "prom-client": "^15.1.3",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "kafkajs": "^2.2.4",
    "pg": "^8.17.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "uuid": "^10.0.0",
    "@platform/contracts": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.29",
    "@types/pg": "^8.16.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "kafka",
    "outbox",
    "event-driven",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}